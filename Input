# Input Temperatures

# Temperature Cold Stream Input
T_ci = int(input("What is the input temperature of the cold stream?: "))
k_o_r = input("Did you input temperature in Kelvin or Rankine? Enter 'K' for Kelvin or 'oR' for Rankine: ")
while k_o_r != 'K' and k_o_r != 'oR':
    k_o_r = input("Invalid entry. Please enter 'K' for Kelvin or 'oR' for Rankine: ")

# Convert AES to SI
if k_o_r == 'oR':
    T_ci = T_ci * 5.0/9.0
    
# Temperature Hot Stream Input
T_hi = int(input("What is the input temperature of the hot stream?: "))
k_o_r = input("Did you input temperature in Kelvin or Rankine? Enter 'K' for Kelvin or 'oR' for Rankine: ")
while k_o_r != 'K' and k_o_r != 'oR':
    k_o_r = input("Invalid entry. Please enter 'K' for Kelvin or 'oR' for Rankine: ")

# Convert AES to SI
if k_o_r == 'oR':
    T_hi = T_hi * 5.0/9.0

# Temperature Output
ho_co = input("Would you like to enter the output temperature of the hot or cold stream? Enter 'hot' or 'cold': ")
while ho_co != 'hot' and ho_co != 'cold':
    ho_co = input("Invalid entry. Please enter 'hot' or 'cold': ")
if ho_co == 'hot':
    T_ho = int(input("What is the output temperature of the hot stream?: "))
    k_o_r = input("Did you input temperature in Kelvin or Rankine? Enter 'K' for Kelvin or 'oR' for Rankine: ")
    while k_o_r != 'K' and k_o_r != 'oR':
        k_o_r = input("Invalid entry. Please enter 'K' for Kelvin or 'oR' for Rankine: ")
    # Convert AES to SI
    if k_o_r == 'oR':
        T_ho = T_ho * 5.0/9.0
elif ho_co == 'cold':
    T_co = int(input("What is the output temperature of the cold stream?: "))
    k_o_r = input("Did you input temperature in Kelvin or Rankine? Enter 'K' for Kelvin or 'oR' for Rankine: ")
    while k_o_r != 'K' and k_o_r != 'oR':
        k_o_r = input("Invalid entry. Please enter 'K' for Kelvin or 'oR' for Rankine: ")
    # Convert AES to SI
    if k_o_r == 'oR':
        T_co = T_co * 5.0/9.0
        
        
        
